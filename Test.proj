<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" DefaultTargets="Build">

  <Target Name="VSTest">
    <ItemGroup>
      <TestProjects Include="$(MSBuildThisFileDirectory)tests\**\*.csproj" />
    </ItemGroup>
    <MSBuild Projects="@(TestProjects)" Targets="VSTest" Properties="VSTestNoBuild=false" ContinueOnError="ErrorAndContinue"/>
  </Target>

</Project>