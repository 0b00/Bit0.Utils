<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>JSend for .net core by Bit0</Description>
    <AssemblyTitle>JSend by Bit0</AssemblyTitle>
    <Authors>b1thunt3r</Authors>
    <TargetFramework>netstandard1.6</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyName>Bit0.Utils.JSend</AssemblyName>
    <PackageId>Bit0.Utils.JSend</PackageId>
    <PackageProjectUrl>https://github.com/b1thunt3r/Bit0.Utils</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/b1thunt3r/Bit0.Utils/blob/master/LICENSE.md</PackageLicenseUrl>
    <NetStandardImplicitPackageVersion>1.6.1</NetStandardImplicitPackageVersion>
    <PackageTargetFallback>$(PackageTargetFallback);dnxcore50</PackageTargetFallback>
    <GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
    <RootNamespace>Bit0.Utils.JSend</RootNamespace>
    <Version>1.1.0</Version>
    <PostBuildEvent>move U:\Code\Bit0.Utils\src\JSend\bin\Debug\*.nupkg U:\Nuget</PostBuildEvent>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Bit0.Utils.Common" Version="0.9.2" />
    <PackageReference Include="Newtonsoft.Json" Version="10.0.2" />
  </ItemGroup>

  <Target Name="PostcompileScript" AfterTargets="Build">
    <Exec Command="dotnet pack --no-build --configuration $(Configuration)" />
  </Target>

</Project>
